<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.playlearngrow.app">

    <!-- Optional: internet for remote content or analytics -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Optional: network state checks -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".PlayLearnGrowApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlayLearnGrow">

        <!-- Main entry point activity (Jetpack Compose or XML-based) -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PlayLearnGrow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Optional: App Links deep link to home -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:scheme="https"
                    android:host="playlearngrow.app"
                    android:pathPrefix="/home" />
            </intent-filter>
        </activity>

        <!-- Optional: navigation host activity if using multiple entry points -->
        <!--
        <activity
            android:name=".ui.NavigationActivity"
            android:exported="false" />
        -->

        <!-- Optional: Hilt (DI) generated components need no manifest entries -->
    </application>
</manifest>
plugins {
    id 'com.android.application'
    id 'org.jetbrains.kotlin.android'
    id 'com.google.dagger.hilt.android'
    id 'kotlin-kapt'
}

dependencies {
    implementation platform('androidx.compose:compose-bom:2024.10.00')
    implementation 'androidx.activity:activity-compose:1.9.3'
    implementation 'androidx.compose.ui:ui'
    implementation 'androidx.compose.material3:material3:1.3.0'
    implementation 'androidx.navigation:navigation-compose:2.8.2'
    implementation 'androidx.core:core-splashscreen:1.0.1'

    implementation 'com.google.dagger:hilt-android:2.52'
    kapt 'com.google.dagger:hilt-compiler:2.52'

    implementation 'androidx.hilt:hilt-navigation-compose:1.2.0'
}

{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "jsx": "react-jsx",
      "moduleResolution": "Bundler",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["vitest/globals", "vite/client"]
    },
    "include": ["src", "tests", "vite.config.ts"]
  }
  